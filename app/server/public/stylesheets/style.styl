@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Maven+Pro:400,900|Roboto')

/**
 * 	variables
 */

$borderColor = #7b2b84
$questionFont = 'Maven Pro', sans-serif
$baseFont = 'Roboto', sans-serif

/**
 * 	styles
 */

global-reset()

body
  h1
    background-image url('http://graphics.cars.com/images/core/logo.png')
    background-repeat no-repeat
    background-size 231px 98px
    padding-left 235px
    height 100px
    font-size 1.5em
  font-family $baseFont
  font-size 1em
  #footer
    display block
    width 100%
    font-size 10px
    position absolute
    bottom 0
    text-align center
  #questions, #moderator
    ol
      width 100%
      li
        border 2px solid $borderColor
        margin 5px
        padding 10px
        min-height 55px
        p
          font-family $questionFont
          font-size 1.5em
          font-weight bold
        .options
          float right
          font-size 0.8em
          .like
            display block
            text-indent -9999px
            background-image url('/images/like.svg')
            background-repeat no-repeat
            background-size 40px 40px
            height 45px
            width 45px
            white-space nowrap
            margin 0 auto 2px auto
            &:hover
              background-size 45px 45px
  #question
    width 100%
    position absolute
    bottom 10
    height 140px
    margin 5px
    textarea
      border 1px solid darken($borderColor, 25)
      width 99%
      height 100px
      font-family $baseFont
    .buttons
      float left
      [type='submit']
        font-weight bold
      [type='reset']
        font-size .7em
    .count
      float right
      font-size .75em
      margin-top 5px
      margin-right 15px

strong
  font-weight bold
